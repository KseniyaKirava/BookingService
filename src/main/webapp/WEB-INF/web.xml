<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <display-name>Servlet kirova</display-name>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.htp.kirova.task2.java.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/do</url-pattern>
    </servlet-mapping>
    <!--<error-page>-->
        <!--<error-code>404</error-code>-->
        <!--<location>/jsp/error.jsp</location>-->
    <!--</error-page>-->
    <!--<error-page>-->
        <!--<exception-type>java.lang.RuntimeException</exception-type>-->
        <!--<location>/jsp/error.jsp</location>-->
    <!--</error-page>-->
    <jsp-config>
        <!--<taglib>-->
            <!--<taglib-uri>customtags</taglib-uri>-->
            <!--<taglib-location>/WEB-INF/tld/custom.tld</taglib-location>-->
        <!--</taglib>-->
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.htp.kirova.task2.java.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CacheControl</filter-name>
        <filter-class>by.htp.kirova.task2.java.filter.CacheControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CacheControl</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SessionLocaleFilter</filter-name>
        <filter-class>by.htp.kirova.task2.java.filter.SessionLocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionLocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <description>MySQL my_sql_kirova</description>
    <resource-ref>
        <description>my_sql_kirova</description>
        <res-ref-name>jdbc/kirova</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>